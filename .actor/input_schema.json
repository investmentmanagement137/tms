{
    "title": "TMS Trade Book Scraper Input",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "tmsUsername": {
            "title": "TMS Username",
            "type": "string",
            "description": "Your TMS login username",
            "editor": "textfield",
            "example": "your_username",
            "isSecret": true
        },
        "tmsPassword": {
            "title": "TMS Password",
            "type": "string",
            "description": "Your TMS login password",
            "editor": "textfield",
            "example": "your_password",
            "isSecret": true
        },
        "geminiApiKey": {
            "title": "Gemini API Key",
            "type": "string",
            "description": "Google Gemini API key for CAPTCHA solving",
            "editor": "textfield",
            "example": "AIzaSy...",
            "isSecret": true
        },
        "supabaseEndpoint": {
            "title": "Supabase S3 Endpoint",
            "type": "string",
            "description": "Supabase S3 endpoint URL",
            "editor": "textfield",
            "example": "https://xxx.storage.supabase.co/storage/v1/s3",
            "default": ""
        },
        "supabaseRegion": {
            "title": "Supabase S3 Region",
            "type": "string",
            "description": "Supabase S3 region",
            "editor": "textfield",
            "example": "ap-southeast-1",
            "default": "ap-southeast-1"
        },
        "supabaseAccessKey": {
            "title": "Supabase Access Key",
            "type": "string",
            "description": "Supabase S3 access key ID",
            "editor": "textfield",
            "example": "",
            "isSecret": true
        },
        "supabaseSecretKey": {
            "title": "Supabase Secret Key",
            "type": "string",
            "description": "Supabase S3 secret access key",
            "editor": "textfield",
            "example": "",
            "isSecret": true
        },
        "supabaseBucketName": {
            "title": "Supabase Bucket Name",
            "type": "string",
            "description": "Target bucket name in Supabase",
            "editor": "textfield",
            "example": "investment_management",
            "default": "investment_management"
        },
        "daysToScrape": {
            "title": "Days to Scrape",
            "type": "integer",
            "description": "Number of days of history to scrape",
            "editor": "number",
            "default": 365,
            "minimum": 1,
            "maximum": 3650
        },
        "uploadToS3": {
            "title": "Upload to S3",
            "type": "boolean",
            "description": "Whether to upload the CSV to Supabase S3",
            "editor": "checkbox",
            "default": true
        }
    },
    "required": [
        "tmsUsername",
        "tmsPassword",
        "geminiApiKey"
    ]
}