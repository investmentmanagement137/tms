{
    "url": "https://tms43.nepsetms.com.np/login",
    "gotoOptions": {
        "waitUntil": "networkidle2",
        "timeout": 30000
    },
    "waitForTimeout": 3000,
    "screenshot": {
        "fullPage": false,
        "type": "png"
    },
    "evaluate": {
        "pageTitle": "() => document.title",
        "pageContent": "() => document.body.innerText.substring(0, 200)",
        "has403": "() => document.body.innerText.includes('403') || document.body.innerText.includes('Forbidden')",
        "hasUsernameField": "() => !!document.querySelector('input[placeholder*=\"Client Code\"]')",
        "hasPasswordField": "() => !!document.querySelector('#password-field')",
        "hasCaptchaImage": "() => !!document.querySelector('.captcha-image-dimension')",
        "loginFormExists": "() => { const u = !!document.querySelector('input[placeholder*=\"Client Code\"]'); const p = !!document.querySelector('#password-field'); const c = !!document.querySelector('.captcha-image-dimension'); return u && p && c; }"
    }
}